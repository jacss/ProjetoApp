<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2fc9e"
    android:orientation="vertical"
    tools:context=".Calculadora">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/editResultado_Id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e5dbdb"

            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_dark"
            android:textSize="80dp" />
    </TableRow>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:layout_width="338dp"
        android:layout_height="74dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp">

        <Button
            android:id="@+id/botaoLimpar_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginRight="2dp"
            android:background="#d2b9b9"
            android:text="CE"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="3dp"
            android:background="#FFD2B9B9"
            android:text="C"
            android:textColor="#880505"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botaoPorcentagem_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:background="#FFD2B9B9"
            android:text="%"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botaoSoma_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:background="#FFD2B9B9"
            android:text="+"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="339dp"
        android:layout_height="74dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp">

        <Button
            android:id="@+id/botao7_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginRight="1dp"
            android:background="#FFCAC7C7"
            android:text="7"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botao8_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="1dp"
            android:background="#FFCAC7C7"
            android:text="8"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botao9_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="1dp"
            android:background="#FFCAC7C7"
            android:text="9"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botaoSubtrair_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:background="#FFD2B9B9"
            android:text="-"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="340dp"
        android:layout_height="74dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/botao4_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="3dp"
            android:background="#FFCAC7C7"
            android:text="4"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botao5_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:background="#FFCAC7C7"
            android:text="5"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botao6_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:background="#FFCAC7C7"
            android:text="6"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botaoMultiplicar_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:background="#FFD2B9B9"
            android:text="X"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="340dp"
        android:layout_height="74dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/botao1_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="#FFCAC7C7"
            android:text="1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botao2_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:background="#FFCAC7C7"
            android:text="2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botao3_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:background="#FFCAC7C7"
            android:text="3"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botaoDividir_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:background="#FFD2B9B9"
            android:text="รท"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="340dp"
        android:layout_height="74dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/botaoZero_Id"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:background="#FFCAC7C7"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botaoPonto_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:background="#FFD2B9B9"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/botaoIgual_Id"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:background="#5591f7"
            android:text="="
            android:textColor="#fbf6f6"
            android:textSize="25sp" />
    </TableRow>
</LinearLayout>